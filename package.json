{
  "name": "spylite",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "build:production": "NODE_ENV=production next build",
    "start": "next start",
    "start:production": "NODE_ENV=production next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test:cross-browser": "node scripts/cross-browser-test.js",
    "test:cross-browser:chrome": "node scripts/cross-browser-test.js --browsers chrome",
    "test:cross-browser:firefox": "node scripts/cross-browser-test.js --browsers firefox",
    "test:cross-browser:safari": "node scripts/cross-browser-test.js --browsers safari",
    "test:cross-browser:edge": "node scripts/cross-browser-test.js --browsers edge",
    "test:cross-browser:headless": "node scripts/cross-browser-test.js --headless",
    "test:validate-setup": "node scripts/validate-test-setup.js",
    "prebuild": "npm run type-check && npm run lint",
    "postbuild": "node scripts/post-build-analysis.js",
    "deploy:check": "node scripts/deployment-check.js"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "@sentry/nextjs": "^10.10.0",
    "critters": "^0.0.23",
    "gsap": "^3.13.0",
    "next": "^15.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-responsive": "^10.0.1",
    "tailwindcss": "^4.1.8",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^22.10.7",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "^9.25.0",
    "eslint-config-next": "^15.1.6",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.2",
    "typescript": "^5.7.3"
  }
}
